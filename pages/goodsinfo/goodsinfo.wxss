/* 轮播图 */
.carousel,.carousel-item-img{
  width: 100%;
  height: 750rpx;
}

/* 商品具体信息 */
.goodsinfo{
  padding: 0 18rpx;
}

.goodsinfo-price{
  color: #eb4450;
  font-size: 55rpx;
  padding: 40rpx 0;
}

.goodsinfo-title{
  display: flex;
}

.goodsinfo-title-text{
  flex: 1;
  padding-right: 78rpx;
  border-right: 1rpx solid #ddd;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal!important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goodsinfo-title-collect{
  width: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goodsinfo-type{
  color:#999;
  padding: 32rpx 0;
  border-bottom: 20rpx solid #f4f4f4;
}

/* 富文本把字体大小设置为0可使图片之间的间隙消失 */
.goodsinfo-richtext rich-text{
  font-size: 0
}


/* 底部工具栏 */
.tool{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
}

.tool-button{
  width: 210rpx;
  color:white;
  text-align: center;
  line-height: 100rpx;
  background-color: #f4b73f;
}

.tool-button:last-child{
  background-color:#eb4450;
}

.tool-icon{
  flex: 1;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.tool-icon-button{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0
}
