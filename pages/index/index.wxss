  width: 750rpx;
}

.women-clothes image{
  width: 200rpx;
  height: 200rpx;
  background-color: red;
  display: block;
  border-radius: 20rpx;
}

.women-clothes .title{
  height: 120rpx;
  background-color: blue;
}

.women-clothes .content{
