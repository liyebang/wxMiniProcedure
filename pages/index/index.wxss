/* 头部 */
.header{
  background-color: #eb4450;
  padding: 18rpx 15rpx;
}

.header navigator{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 5rpx;
  padding: 10rpx 0;
}

.header navigator text{
  color: #bbb;
  font-size: 30rpx;
  margin-left: 10rpx;
}

/* 轮播图 */
.carousel image{
  width: 750rpx;
}

/* 导航栏 */
.nav{
  display: flex;
  padding: 30rpx 0;
}

.nav .nav-item{
  width: 25%;
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
}

.nav .nav-item image{
  background-color: #e5e5e5;
  width: 100rpx;
  height: 100rpx;
}

/* 女装 */
