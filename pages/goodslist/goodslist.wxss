/* 头部 */
.header{
  background-color: #eeeeee;
  padding: 30rpx 16rpx;
}

.header .header-content{
  padding: 7rpx 30rpx;
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 10rpx;
}

.header .header-content text{
  margin-left: 18rpx;
}

/* 中间内容 */

/* 中间的导航菜单 */
.content-nav{
  display: flex;
  height: 99rpx;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
}

.content-nav-item{
  flex: 1;
  text-align: center;
}

.content-nav-item.active{
  color: #eb4450;
}

/* 中间的列表 */
.content-goods{
  padding: 0 20rpx;
}

.content-goods-item{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ddd;
}

.content-goods-item-img{
  margin-right: 26rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: red;
}

.content-goods-item-info{
  background-color: yellow;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content-goods-item-info-title{
  display: -webkit-box;
  overflow: hidden;
  white-space: normal!important;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.content-goods-item-info-price{
  color: #eb4956;
}

.content-goods-item-info-price-num{
  font-size: 50rpx;
}
