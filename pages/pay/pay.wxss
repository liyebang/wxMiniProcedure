.receiving{
  min-height: 210rpx;
  border-bottom: 14rpx solid rgba(0,0,255,.3);
  background: #fff;
}

.cartlist {
  padding-bottom: 160rpx;
}
.cartlist-title{
  padding: 28rpx 34rpx;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
}

.cartlist-title text{
  margin-right: 15rpx;
}

.cartlist-content{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f4f4f4;
}

.cartlist-content-item{
  position: relative;
  width: 750rpx;
  display: flex;
  background-color: #fff;
}

.cartlist-content-item-left{
  width: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.cartlist-content-item-tool{
  display: flex;
  align-items: center;
  position: absolute;
  right: 20rpx;
  bottom: 25rpx;
}

.cartlist-content-item-tool view{
  margin-left: 35rpx;
}

.cartlist-content-item-tool-button{
  border: 4rpx solid #666;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}

.cartlist-content-item-component{
  width: 100%;
}


/* 结算工具栏 */
.tool{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  z-index: 99;
}

.tool-right{
  flex: 1;
  display: flex;
  align-items: center;
}

.tool-right-text{
  width: 120rpx;
}

.tool-right-priceinfo{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  margin-right: 25rpx;
}

.tool-right-priceinfo text{
  color: #eb4450;
}

.tool-right-priceinfo-icon{
  font-size: 25rpx;
}

.tool-right-priceinfo-num{
  font-size: 45rpx;
}

.tool-right-priceinfo-tips{
  color: #999;
  font-size: 25rpx;
}

.tool-right-account{
  background-color: #eb4450;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  width: 230rpx;
}