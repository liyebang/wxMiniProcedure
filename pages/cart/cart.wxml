<!-- 结算工具栏 -->
<view class="tool">
  <view class="tool-left">
    <text class="iconfont {{ true? 'icon-xuanzhong': 'icon-xuanzhong1' }}"></text>
  </view>
  <view class="tool-right">
    <view class="tool-right-text">全选</view>
    <view class="tool-right-priceinfo">
      <view>合计: <text class="tool-right-priceinfo-icon">￥<text class="tool-right-priceinfo-num">55515.00</text></text></view>
      <view class="tool-right-priceinfo-tips">包含运费</view>
    </view>
    <view class="tool-right-account">
      结算<text hidden="{{ false }}">(3)</text>
    </view>
  </view>
</view>
