/* 结算工具栏 */
.tool{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  height: 100rpx;
  width: 750rpx;
  background-color: #fff;
  z-index: 99;
}

.tool-left{
  width: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-right{
  flex: 1;
  display: flex;
  align-items: center;
}

.tool-right-text{
  width: 120rpx;
}

.tool-right-priceinfo{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.tool-right-priceinfo text{
  color: #eb4450;
}

.tool-right-priceinfo-icon{
  font-size: 25rpx;
}

.tool-right-priceinfo-num{
  font-size: 45rpx;
}

.tool-right-priceinfo-tips{
  color: #999;
  font-size: 25rpx;
}

.tool-right-account{
  background-color: #eb4450;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  width: 230rpx;
}