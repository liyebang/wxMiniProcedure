/* 头部 */
.header{
  padding: 30rpx 15rpx;
  background-color: #eee;
  display: flex;
}

.header .search-input{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  padding: 14rpx 20rpx;
  flex: 1;
  margin-right: 10rpx;
  border-radius: 20rpx;
  justify-content: left;
}

.header .search-input icon{
  margin-right: 10rpx;
}

.header button{
  border-radius: 20rpx;
  line-height: 74rpx;
}